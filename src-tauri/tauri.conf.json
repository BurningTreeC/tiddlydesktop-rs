{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tiddlydesktop-rs",
  "version": "0.1.71",
  "identifier": "com.burningtreec.tiddlydesktop-rs",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/tiddlywiki/**/*": "resources/tiddlywiki/",
      "../src/index.html": "index.html"
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0 (>= 2.40.0)",
          "libgtk-3-0 (>= 3.24.0)",
          "libglib2.0-0 (>= 2.66.0)",
          "libcairo2 (>= 1.16.0)",
          "libpango-1.0-0 (>= 1.48.0)",
          "libgdk-pixbuf-2.0-0 (>= 2.40.0)",
          "libayatana-appindicator3-1",
          "gstreamer1.0-plugins-base",
          "gstreamer1.0-plugins-good",
          "libva2",
          "libva-drm2",
          "libva-x11-2",
          "mesa-va-drivers",
          "libegl1",
          "libgl1"
        ],
        "recommends": [
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-plugins-ugly",
          "gstreamer1.0-libav",
          "mesa-utils"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1 >= 2.40.0",
          "gtk3 >= 3.24.0",
          "glib2 >= 2.66.0",
          "cairo >= 1.16.0",
          "pango >= 1.48.0",
          "gdk-pixbuf2 >= 2.40.0",
          "libayatana-appindicator-gtk3",
          "gstreamer1-plugins-base",
          "gstreamer1-plugins-good",
          "mesa-dri-drivers",
          "mesa-va-drivers",
          "libva",
          "mesa-libEGL",
          "mesa-libGL"
        ]
      }
    },
    "windows": {
      "nsis": {
        "template": "nsis/installer.nsi"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "fileAssociations": [
      {
        "ext": ["html", "htm"],
        "name": "TiddlyWiki HTML File",
        "description": "TiddlyWiki HTML File",
        "mimeType": "text/html",
        "role": "Editor"
      }
    ]
  }
}
