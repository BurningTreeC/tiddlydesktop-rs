{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tiddlydesktop-rs",
  "version": "0.3.29",
  "identifier": "com.burningtreec.tiddlydesktop-rs",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": "default-src 'self' wikifile: tdasset: http://127.0.0.1:*; script-src 'self' 'unsafe-inline' 'unsafe-eval' wikifile: http://127.0.0.1:*; style-src 'self' 'unsafe-inline' wikifile: tdasset: http://127.0.0.1:*; img-src 'self' data: blob: wikifile: tdasset: http://127.0.0.1:* https:; connect-src 'self' wikifile: tdasset: http://127.0.0.1:* https:; font-src 'self' data: wikifile: tdasset:; media-src 'self' data: blob: wikifile: tdasset: https:; frame-src 'self' wikifile: tdasset: https:; object-src 'self' wikifile: tdasset:; base-uri 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/tiddlywiki/**/*": "resources/tiddlywiki/",
      "resources/node-bin/**/*": "resources/node-bin/",
      "../src/index.html": "index.html"
    },
    "linux": {
      "deb": {
        "depends": [
          "libayatana-appindicator3-1"
        ],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": [
          "libayatana-appindicator-gtk3"
        ]
      }
    },
    "windows": {
      "nsis": {
        "template": "nsis/installer.nsi",
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/nsis-header.bmp",
        "sidebarImage": "icons/nsis-sidebar.bmp"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "fileAssociations": [
      {
        "ext": ["html", "htm"],
        "name": "TiddlyWiki HTML File",
        "description": "TiddlyWiki HTML File",
        "mimeType": "text/html",
        "role": "Editor"
      }
    ]
  }
}
